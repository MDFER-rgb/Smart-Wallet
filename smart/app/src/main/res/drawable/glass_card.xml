<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Glass Background -->
    <solid android:color="#120A1F" />

    <!-- Purple Glow Border -->
    <stroke
        android:width="2dp"
        android:color="#9D4BFF" />

    <!-- Rounded Corners -->
    <corners android:radius="26dp" />

    <!-- Outer Glow Shadow (soft neon) -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp"/>
</shape>
