<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:padding="22dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_premium_rounded">

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Subscription"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="18dp" />

        <!-- PROVIDER -->
        <EditText
            android:id="@+id/edtProvider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Provider (e.g., Netflix)"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:background="@drawable/premium_input"
            android:inputType="textPersonName" />

        <!-- PLAN -->
        <EditText
            android:id="@+id/edtPlan"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Plan (e.g., Premium)"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="14dp"
            android:background="@drawable/premium_input"
            android:inputType="text" />

        <!-- AMOUNT + CURRENCY -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Amount"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:padding="14dp"
                android:background="@drawable/premium_input"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtCurrency"
                android:layout_marginStart="10dp"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:hint="LKR"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:padding="14dp"
                android:background="@drawable/premium_input"
                android:inputType="text" />
        </LinearLayout>

        <!-- RENEWAL TITLE -->
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renewal date"
            android:textColor="#9D7FD4"
            android:textSize="13sp" />

        <!-- RENEWAL DATE INPUT -->
        <EditText
            android:id="@+id/edtRenewal"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Select date (tap)"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:padding="14dp"
            android:focusable="false"
            android:background="@drawable/premium_input" />

        <!-- FREQUENCY (popupTheme REMOVED - this fixed crash) -->
        <Spinner
            android:id="@+id/spinnerFrequency"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/premium_input" />

        <!-- NOTES -->
        <EditText
            android:id="@+id/edtNotes"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Notes (optional)"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:gravity="top"
            android:padding="14dp"
            android:background="@drawable/premium_input"
            android:inputType="textMultiLine" />

        <!-- BUTTONS -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelDialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/premium_btn_cancel" />

            <Button
                android:id="@+id/btnSaveDialog"
                android:layout_marginStart="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/premium_btn_save" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
