<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D001A">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- iOS Style Profile Image -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/ios_profile_circle"
                android:clipToOutline="true"
                android:padding="3dp" />
        </FrameLayout>


        <!-- FIRST NAME -->
        <EditText
            android:id="@+id/edtFirst"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="First Name"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- LAST NAME -->
        <EditText
            android:id="@+id/edtLast"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Last Name"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- EMAIL -->
        <EditText
            android:id="@+id/edtEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Email"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- PASSWORD -->
        <EditText
            android:id="@+id/edtPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Password"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- CONFIRM PASSWORD -->
        <EditText
            android:id="@+id/edtConfirmPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Confirm Password"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- PHONE -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- ADDRESS -->
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Address"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- BALANCE -->
        <EditText
            android:id="@+id/edtInitialBalance"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Enter Total Balance"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- MONTHLY BUDGET -->
        <EditText
            android:id="@+id/edtMonthlyBudget"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:hint="Enter Monthly Budget"
            android:textColor="#fff"
            android:textColorHint="#aaa"
            android:background="@drawable/ios_input"/>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/ios_button"/>

    </LinearLayout>
</ScrollView>
