<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRow"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp">

    <!-- Icon Circle -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/category_icon_bg"
        android:foregroundGravity="center">

        <!-- Category Icon -->
        <ImageView
            android:id="@+id/imgCategoryIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shopping"
            android:tint="#FFFFFF"/>
    </FrameLayout>

    <!-- Texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvCategorySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 transactions"
            android:textSize="12sp"
            android:textColor="#A89FF9"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Amount + mini progress -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/tvCategoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$450"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <!-- small progress bar showing % of total -->
        <ProgressBar
            android:id="@+id/progCategory"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="72dp"
            android:layout_height="6dp"
            android:layout_marginTop="6dp"
            android:progress="60"
            android:max="100"
            android:progressDrawable="@drawable/purple_progress"/>
    </LinearLayout>

</LinearLayout>
